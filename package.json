{
  "name": "@cd/cannabis-platform-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "server/*"
  ],
  "scripts": {
    "k8s:start": "terraform:apply && kubectl apply -f k8s/",
    "terraform:apply": "terraform -chdir='./terraform' apply -auto-approve",
    "terraform:destroy": "terraform -chdir='./terraform' destroy",
    "db:init": "yarn db db:migrate-init",
    "dev:init": "yarn permit-scripts && yarn build && yarn dev",
    "prod:init": "yarn permit-scripts && yarn build && yarn start",
    "dev": "concurrently \"yarn watch\" \"yarn dev:apps\"",
    "dev:apps": "turbo run dev --filter='./apps/*' --parallel",
    "watch": "turbo run watch --parallel",
    "start": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js --env production",
    "permit-scripts": "node scripts/permit-scripts.js",
    "docker:app": "scripts/docker/docker.sh",
    "docker:supertokens": "scripts/docker/supertokens.sh",
    "docker:shadow-mysql": "scripts/docker/shadow-mysql.sh",
    "docker:nominatim": "scripts/docker/nominatim.sh",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "build": "yarn workspaces foreach -p --topological-dev -v run build",
    "build:fix": "turbo run lint:fix && turbo run build",
    "build:prod": "turbo run build:prod",
    "test": "turbo run test",
    "app": "yarn workspace @cd/app",
    "shop": "yarn workspace @cd/shop",
    "ui": "yarn workspace @cd/shared-ui",
    "lib": "yarn workspace @cd/shared-lib",
    "main": "yarn workspace @cd/server-main",
    "payments": "yarn workspace @cd/server-payments",
    "db": "yarn workspace @cd/data-access"
  },
  "engines": {
    "node": "16.16.0",
    "yarn": "3.3.1",
    "npm": "please-use-yarn"
  },
  "devDependencies": {
    "concurrently": "7.6.0",
    "turbo": "1.6.3"
  },
  "packageManager": "yarn@3.3.1"
}
