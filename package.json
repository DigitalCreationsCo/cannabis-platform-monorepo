{
  "name": "cannabis-platform-monorepo",
  "version": "0.0.1",
  "private": true,
  "keywords": [
    "monorepo",
    "nextjs",
    "prisma",
    "workspace",
    "vite"
  ],
  "homepage": "https://github.com/DigitalCreationsCo/cannabis-platform-monorepo",
  "repository": {
    "type": "git",
    "url": "DigitalCreationsCo/cannabis-platform-monorepo"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "server/*",
    "mobile/*"
  ],
  "scripts": {
    "g:test-unit": "yarn workspaces foreach -ptv run test-unit",
    "g:test-unit-changed": "yarn workspaces foreach --since=origin/master run test-unit",
    "g:test-unit-ci": "yarn workspaces foreach --since=origin/master run test-unit-ci",
    "g:test-e2e": "yarn workspaces foreach -tv run test-e2e",

    "g:build": "yarn workspaces foreach -p --topological-dev -v run build",
    "g:build-all": "yarn workspaces foreach -ptv --include '@cd/*' run build",
    "g:build-ci": "yarn workspaces foreach --topological-dev --no-private -v --since=origin/master run build",
    "g:changeset": "changeset",
    "g:check-dist": "yarn workspaces foreach -ptv run check-dist",
    "g:clean": "yarn clean:global-cache && yarn workspaces foreach -ptv run clean",
    "g:codegen": "yarn workspaces foreach -ptv run codegen",
    "g:typecheck": "yarn workspaces foreach -ptv run typecheck",

    "g:lint": "yarn workspaces foreach -ptv run lint --color",
    "g:lint-fix": "yarn workspaces foreach -ptv run lint-fix",
    "g:lint-staged-files": "lint-staged --allow-empty",
    "g:lint-styles": "yarn workspaces foreach -ptv run lint-styles --color",

    "g:release": "yarn g:build && changeset publish",
    "g:share-static-hardlink": "yarn workspaces foreach -pv --include '*-app' run share-static-hardlink",
    "g:share-static-symlink": "yarn workspaces foreach -pv --include '*-app' run share-static-symlink",
    
    "packages:build": "yarn workspaces foreach -itR --from packages/* run build",
    "packages:watch": "cd scripts && node watch/packages.js",
    "packages:clean": "yarn workspaces foreach -ptv --include '@cd/*' run clean",
    "packages:lint": "yarn workspaces foreach -ptv --include '@cd/*' run lint",
    "packages:test:unit": "yarn workspaces foreach -ptv --include '@cd/*' run test-unit",
    "packages:typecheck": "yarn workspaces foreach -ptv --include '@cd/*' run typecheck",
    
    "server:build": "yarn workspaces foreach -itR --from @cd/server-$0 run build",
    "server:build-all": "yarn workspaces foreach -ptv --include '@cd/server-*' run build",
    "server:watch": "cd scripts && node watch/server.js",
    "server:clean": "yarn workspaces foreach -ptv --include '@cd/server-*' run clean",
    
    "app:dev": "yarn workspaces foreach -ptv --include '@cd/*-app' run dev",
    "app:build": "yarn workspaces foreach -itR --from @cd/$0-app run build",
    "app:build-all": "yarn workspaces foreach -ptv --include '@cd/*-app' run build",
    "app:clean": "yarn workspaces foreach -ptv --include '@cd/*-app' run clean",
    "dev-all": "concurrently \"yarn packages:watch\" \"yarn server:watch\" \"yarn apps:dev\"",

    "docker:supertokens": "scripts/docker/supertokens.sh",
    "docker:shadow-db": "scripts/docker/shadow-db-mysql.sh",
    "docker:redis": "scripts/docker/redis.sh",
    "docker:delivery-widget-demo": "scripts/docker/launch-widget-demo.sh",
    "docker:build": "TYPE=$0 CONTEXT=$1 PORT=$2 make docker-build-nocache",

    "tf:init": "make init",
    "tf:plan": "make plan",
    "tf:create": "terraform/scripts/create.sh",
    "tf:configure": "terraform/scripts/configure.sh",
    "tf:close": "terraform -chdir=./terraform destroy",
    "tf:console": "make console",

    "cluster:start": "make apply && kubectl apply -f k8s/",
    "cluster:nodes": "kubectl get nodes",
    
    "install:playwright": "playwright install",
    "nuke:node_modules": "npx rimraf@3.0.1 '**/node_modules'",
    "postinstall": "is-ci || yarn husky install",
    "permit-scripts": "node scripts/permit-scripts.js"
  },
  "engines": {
    "node": "16.20.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@3.3.1",
