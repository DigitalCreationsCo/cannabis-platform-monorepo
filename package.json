{
  "name": "@cd/cannabis-platform-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "server/*"
  ],
  "scripts": {
    "db:init": "yarn db db:migrate-init",
    "dev:init": "yarn permit-scripts && yarn build && yarn dev",
    "prod:init": "yarn permit-scripts && yarn build && yarn start",
    "dev": "concurrently \"yarn watch\" \"yarn dev:apps\"",
    "dev:apps": "turbo run dev --filter='./apps/*' --parallel",
    "watch": "turbo run watch --parallel",
    "start": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js --env production",
    "permit-scripts": "node scripts/permit-scripts.js",
    "docker:app": "scripts/docker/docker.sh",
    "docker:supertokens": "scripts/docker/supertokens.sh",
    "docker:mysql": "scripts/docker/mysql.sh",
    "docker:nominatim": "scripts/docker/nominatim.sh",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "build": "turbo run build",
    "build:fix": "turbo run lint:fix && turbo run build",
    "build:prod": "turbo run build:prod",
    "test": "turbo run test",
    "app": "yarn workspace @cd/app",
    "shop": "yarn workspace @cd/shop",
    "ui": "yarn workspace @cd/shared-ui",
    "lib": "yarn workspace @cd/shared-lib",
    "main": "yarn workspace @cd/server-main",
    "db": "yarn workspace @cd/data-access"
  },
  "engines": {
    "node": "16.16.0"
  },
  "prisma": {
    "schema": "packages/data-access/schema.prisma",
    "seed": "ts-node --esm src/db/seed.ts"
  },
  "devDependencies": {
    "@cd/data-access": "*",
    "@cd/shared-config": "*",
    "@cd/shared-lib": "*",
    "@cd/shared-ui": "*",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "autoprefixer": "10.4.13",
    "chmod": "0.2.1",
    "concurrently": "7.6.0",
    "dotenv": "16.0.3",
    "dotenv-cli": "7.0.0",
    "dotenv-expand": "10.0.0",
    "eslint": "8.29.0",
    "eslint-config-next": "13.0.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "jest": "29.3.1",
    "jest-mock-extended": "3.0.1",
    "mongodb": "5.1.0",
    "next": "13.0.6",
    "next-connect": "0.13.0",
    "node-cache": "5.1.2",
    "node-mocks-http": "1.12.1",
    "nodemon": "2.0.20",
    "postcss": "8.4.19",
    "prettier": "2.8.0",
    "tsconfig-paths": "4.2.0",
    "turbo": "1.6.3",
    "typescript": "4.9.3",
    "typescript-plugin-css-modules": "4.1.1"
  },
  "packageManager": "yarn@3.3.1"
}
