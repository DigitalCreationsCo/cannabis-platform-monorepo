{
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@gras/ui": [
        "../../packages/ui/src/index"
      ],
      "@gras/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@gras/core": [
        "../../packages/core/src/index"
      ],
      "@gras/core/*": [
        "../../packages/core/src/*"
      ],
      "@gras/data-access": [
        "../../packages/data-access/src/index"
      ],
      "@gras/data-access/*": [
        "../../packages/data-access/src/*"
      ],
      "@gras/eslint-config": [
        "../../packages/eslint-config/src/index"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".eslintrc.*",
    "next-env.d.ts",
    "**/*.ts",
    "next-auth.d.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/.*/**"
  ]
}
