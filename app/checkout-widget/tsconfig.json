{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"exclude": [
		"build",
		"dist",
		"webpack.config.js",
		"**/node_modules",
		"**/*.stories.tsx",
		"**/*.stories.ts",
		"**/*.stories.mdx",
		".storybook/**",
		"**/.*/"
	],
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": ["dom", "dom.iterable", "ES2020"],
		"module": "ES2020",
		"target": "ES2020",
		"noEmit": false,
		"allowJs": true,
		"outDir": "./deploy/dist",
		"jsx": "react-jsx",
		"paths": {
			"@cd/ui-lib": ["../../../packages/ui-lib/src/index"],
			"@cd/ui-lib/*": ["../../../packages/ui-lib/*"],
			"@cd/core-lib": ["../../../packages/core-lib/src/index"],
			"@cd/core-lib/*": ["../../../packages/core-lib/*"],
			"@cd/data-access": ["../../../packages/data-access/src/index"],
			"@cd/data-access/*": ["../../../packages/data-access/*"],
			"@cd/eslint-config": ["../../../packages/eslint-config/src/index"]
		}
	},
}
