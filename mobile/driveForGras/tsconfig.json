{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "ES2020"],
		"module": "ES2020",
		"jsx": "react-native",
		"incremental": true,
		"paths": {
			"@cd/core-lib": ["../../packages/core-lib/src/index"],
			"@cd/data-access": ["../../packages/data-access/src/index"],
			"@cd/eslint-config": ["../../packages/eslint-config/src/index"],
			"@cd/native-ui": ["../../packages/native-ui/src/index"]
		}
	},
	"exclude": ["**/node_modules", "app", "**/.*/"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	]
}
