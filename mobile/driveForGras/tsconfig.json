{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"target": "es2015",
		"lib": ["dom", "dom.iterable", "es2015"],
		"module": "es2020",
		"jsx": "react-native",
		"baseUrl": ".",
		"paths": {
			"@components": ["./components/index"],
			"@components/*": ["./components/*"],
			"@views": ["./views/index"],
			"@views/*": ["./views/*"],
			"@styles": ["./styles"],
			"@constants": ["./constants/index"],
			"@constants/*": ["./constants/*"],
			"@cd/core-lib": ["../../packages/core-lib/src/index"],
			"@cd/core-lib/*": ["../../packages/core-lib/*"],
			"@cd/data-access": ["../../packages/data-access/src/index"],
			"@cd/data-access/*": ["../../packages/data-access/*"],
			"@cd/eslint-config": ["../../packages/eslint-config/src/index"]
		}
	},
	"exclude": ["**/node_modules", "**/.*/", "./.expo/**"],
	"include": [
		"**/*.ts",
		"**/*.tsx",
			"**/*.js",
			"**/*.json",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}
