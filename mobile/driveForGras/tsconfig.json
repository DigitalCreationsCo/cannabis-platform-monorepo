{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"strict": true,
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "ES2020"],
		"module": "ES2020",
		"moduleResolution": "node",
		"jsx": "react-native",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@components": ["./components/index"],
			"@components/*": ["./components/*"],
			"@views/*": ["./views/*"],
			"@cd/core-lib": ["../../packages/core-lib/src/index"],
			"@cd/core-lib/*": ["../../packages/core-lib/*"],
			"@cd/data-access": ["../../packages/data-access/src/index"],
			"@cd/data-access/*": ["../../packages/data-access/*"],
			"@cd/eslint-config": ["../../packages/eslint-config/src/index"],
		},
	},
	"exclude": ["**/node_modules", "**/.*/", "./.expo/**"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	]
}
