{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "jsx": "react-native",
    "incremental": true,
    "paths": {
      "@cd/core-lib": ["../../../packages/core-lib/src/index"],
      "@cd/data-access": ["../../../packages/data-access/src/index"],
      "@cd/eslint-config": ["../../../packages/eslint-config/src/index"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ]
}
