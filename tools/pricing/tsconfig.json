{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2015"
    ],
    "module": "es2020",
    "jsx": "preserve",
    "noImplicitAny": false,
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@cd/ui-lib": [
        "../../../packages/ui-lib/src/index"
      ],
      "@cd/ui-lib/*": [
        "../../../packages/ui-lib/*"
      ],
      "@cd/core-lib": [
        "../../../packages/core-lib/src/index"
      ],
      "@cd/core-lib/*": [
        "../../../packages/core-lib/*"
      ],
      "@cd/data-access": [
        "../../../packages/data-access/src/index"
      ],
      "@cd/data-access/*": [
        "../../../packages/data-access/*"
      ],
      "@cd/eslint-config": [
        "../../../packages/eslint-config/src/index"
      ]
    },
    "isolatedModules": true
  },
  "exclude": [
    "**/node_modules",
    "**/.*/**",
    "./.next/**"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ]
}
