{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "ES2015",
		"lib": ["dom", "dom.iterable", "ES2015"],
		"module": "es2020",
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@gras/ui": ["../../../packages/ui/src/index"],
			"@gras/ui/*": ["../../../packages/ui/*"],
			"@gras/core": ["../../../packages/core/src/index"],
			"@gras/core/*": ["../../../packages/core/*"],
			"@gras/data-access": ["../../../packages/data-access/src/index"],
			"@gras/data-access/*": ["../../../packages/data-access/*"],
			"@gras/eslint-config": ["../../../packages/eslint-config/src/index"]
		}
	},
	"exclude": ["**/node_modules", "**/.*/**", "./.next/**"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	]
}
