{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "inputs": [
                "./**/*.ts",
                "./**/*.tsx",
                "tsconfig.json",
                "package.json"
            ],
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "dev": {
            "cache": false,
            "dependsOn": [
                "^build"
            ]
        },
        "lint": {
        },
        "lint:fix": {
        },
        "test": {
            "inputs": [
                "**/*.test.*"
            ]
        },
        "watch": {
            "cache": true,
            "inputs": [
                "./**/*.ts",
                "./**/*.tsx"
            ]
        }
    }
}