FROM --platform=linux/amd64 node:16-alpine as install
WORKDIR /root
COPY package.json ./
COPY yarn.lock ./
COPY .yarn .yarn
COPY . .
RUN yarn --immutable

FROM --platform=linux/amd64 node:16-alpine as node_modules
COPY --from=install /root/node_modules ./node_modules
COPY --from=install /root/.yarn ./.yarn