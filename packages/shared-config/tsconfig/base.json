{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
      "composite": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": true,
      "moduleResolution": "node16",
      "module":"ES2015",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": false,
      "target": "ES2015",
      "lib": ["ES2015"],
      "paths": {
        "@cd/shared-ui": ["../../packages/shared-ui"],
        "@cd/shared-ui/*": ["../../packages/shared-ui/*"],
        "@cd/shared-lib": ["../../packages/shared-lib"],
        "@cd/shared-lib/*": ["../../packages/shared-lib/*"],
        "@cd/data-access": ["../../packages/data-access"],
        "@cd/data-access/*": ["../../packages/data-access/*"],
        "@cd/shared-config": ["../../packages/shared-config"],
        "@cd/shared-config/*": ["../../packages/shared-config/*"]
      }
    },
    "exclude": ["node_modules"]
  }