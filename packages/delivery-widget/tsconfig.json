{
    "include": ["."],
    "exclude": ["script", "dist", "webpack.config.cjs", "**/node_modules"],
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "target": "esnext",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@cd/shared-ui": ["../shared-ui/src"],
            "@cd/shared-ui/*": ["../shared-ui/src/*"],
            
        }
    }
}