{
  "name": "@cd/delivery-widget",
  "private": true,
  "version": "0.0.1",
  "main": "./src",
  "scripts": {
    "build": "yarn build:clean && tsc",
    "build:clean": "rm -rf dist",
    "bundle:widget": "tsc src/* --out /dev/stdout | browserify -o ./dist/widget.js",
    "bundle:ejs": "copyfiles -u 3 \"./src/**/*.ejs\" \"./dist/widget/views\" --verbose",
    "start": "yarn build && node dist",
    "serve:dev": "concurrently \"yarn serve:js\" \"yarn serve:hostpage\"",
    "serve:hostpage": "serve -l 4040 ./public --cors",
    "serve:js": "serve -l 4050 ./dist --cors",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "ejs": "3.1.9",
    "express": "4.18.2",
    "typescript": "4.9.3"
  },
  "devDependencies": {
    "@types/ejs": "3.1.2",
    "browserify": "17.0.0",
    "concurrently": "8.0.1",
    "copyfiles": "2.4.1",
    "serve": "14.2.0",
    "webpack": "5.78.0",
    "webpack-cli": "5.0.1"
  }
}
