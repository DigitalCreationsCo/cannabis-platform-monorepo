{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./src",
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "ESNext"],
		"module": "ESNext",
		"jsx": "react-native",
		"noEmit": false,
		"incremental": false,
		"paths": {
			"@themed": ["./components/Themed"],
			"@cd/data-access": ["../../../packages/data-access/src/index"],
			"@cd/eslint-config": ["../../../packages/eslint-config/src/index"],
			"@cd/core-lib": ["../../../packages/core-lib/src/index"],
			"@cd/core-lib/*": ["../../../packages/core-lib/*"]
		}
	},
	"exclude": ["**/node_modules", "dist", "build"]
}
