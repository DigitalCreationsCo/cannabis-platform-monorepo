{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "target": "ES2015",
    "module": "ES2015",
    "jsx": "react-jsx",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "noEmit": false,
    "declarationMap": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "sourceMap": true
  },
  "exclude": ["**/node_modules", "dist", "**/__tests__/*", "**/test/*"]
}
