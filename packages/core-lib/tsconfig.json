{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
	  "strict": false,
	  "baseUrl": "./src",
	  "target": "ESNext",
	  "lib": ["dom", "dom.iterable", "esnext"],
	  "module": "ESNext",
	  "jsx": "react-jsx",
	  "noEmit": false,
	  "incremental": true,
	  "paths": {
		"@cd/data-access": ["../../../packages/data-access/src/index"],
		"@cd/eslint-config": ["../../../packages/eslint-config/src/index"]
	},
	  "types": ["vitest/globals"]
	},
	"exclude": ["**/node_modules", "**/.*/*", "dist"],
	"include": [
	  ".eslintrc.*",
	  "**/*.ts",
	  "**/*.tsx",
	  "**/*.mts",
	  "**/*.js",
	  "**/*.cjs",
	  "**/*.mjs",
	  "**/*.jsx",
	  "**/*.json"
	]
  }
  