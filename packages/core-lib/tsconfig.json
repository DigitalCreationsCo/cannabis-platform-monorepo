{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "es2015",
		"lib": ["dom", "dom.iterable", "es2015"],
		"module": "es2020",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"paths": {
			"@cd/data-access": ["../../../packages/data-access/src/index"],
			"@cd/eslint-config": ["../../../packages/eslint-config/src/index"]
		}
	},
	"exclude": ["**/node_modules", "**/.*/", "dist", "build", "**/test/*"]
}
