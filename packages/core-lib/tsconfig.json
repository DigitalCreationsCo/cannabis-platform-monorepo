{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"types": [
			"node",
			"jest",
			"vitest/globals"
		],
	  "strict": true,
	  "baseUrl": "./src",
	  "target": "es2015",
	  "lib": ["dom", "dom.iterable", "es2015"],
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "jsx": "react-jsx",
	  "noEmit": false,
	  "incremental": true,
	  "paths": {
		"@cd/data-access": ["../../../packages/data-access/src/index"],
		"@cd/eslint-config": ["../../../packages/eslint-config/src/index"]
	},
	},
	"exclude": ["**/node_modules", "**/.*/*", "dist"],
	"include": [
	  ".eslintrc.*",
	  "**/*.ts",
	  "**/*.tsx",
	  "**/*.mts",
	  "**/*.js",
	  "**/*.cjs",
	  "**/*.mjs",
	  "**/*.jsx",
	  "**/*.json"
	]
  }
  