{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": false,
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "noEmit": false,
    "incremental": true,
    "isolatedModules": true,
    "composite": true,
    "paths": {
      "@cd/data-access": ["../../../packages/data-access/src/index"],
      "@cd/data-access/*": ["../../../packages/data-access/src/*"],
      "@cd/eslint-config": ["../../../packages/eslint-config/src/index"],
      "@cd/eslint-config/*": ["../../../packages/eslint-config/src/*"]
    }
  },
  "exclude": ["**/.*/", "dist", "build",  "**/test/*"]
}
