{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"exclude": ["**/node_modules", "dist", "build"],
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "ES2015",
		"lib": ["ES2015"],
		"module": "es2020",
		"moduleResolution": "node",
		"noEmit": false,
		"incremental": true,
		"paths": {
			"@cd/eslint-config": ["../../../packages/eslint-config/"]
		}
	}
}
