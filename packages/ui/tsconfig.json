{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "ES2015",
		"lib": [
		"dom",
		"dom.iterable",
		"ES2015"
		],
		"jsx": "react-jsx",
    	"module": "es2020",
		"incremental": true,
    	"noImplicitAny": false,
		"noEmit": false,
		"strict": true,
		"paths": {
			"@gras/data-access": ["../../../packages/data-access/src/index"],
			"@gras/data-access/*": ["../../../packages/data-access/src/*"],
			"@gras/eslint-config": ["../../../packages/eslint-config/src/index"],
			"@gras/core": ["../../../packages/core/src/index"],
			"@gras/core/*": ["../../../packages/core/src/*"]
		}
	},
	"exclude": ["**/node_modules", "**/.*/", "dist", "build", 
		// "**/test/*"
	],
	"include": [
    	"**/*.eslintrc.*",
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	]
}
