{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"declaration": true,
	    "declarationMap": true,
		"jsx": "react-jsx",
		"incremental": false // dts with tsup requires rootDir if incremental (which does not work well aliases)
	},
	"exclude": ["**/node_modules", "**/.*/", "dist", "build", "**/test/*",
	"**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.stories.mdx",
    ".storybook/**"
]
}
