{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2015",
		"noEmit": true,
		"module": "ES2015",
		"jsx": "react-jsx",
		"incremental": false // dts with tsup requires rootDir if incremental (which does not work well aliases)
	},
	"exclude": ["**/node_modules", "**/.*/", "dist", "build", "**/test/*",
	"**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.stories.mdx",
    ".storybook/**"]
}
