{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./src",
		"target": "es2015",
		"lib": ["dom", "dom.iterable", "es2015"],
		"module": "es2015",
		"jsx": "react-jsx",
		"noEmit": false,
		"incremental": true,
		"paths": {
			"@cd/data-access": ["../../../packages/data-access/src/index"],
			"@cd/eslint-config": ["../../../packages/eslint-config/src/index"],
			"@cd/core-lib": ["../../../packages/core-lib/src/index"]
		}
	},
	"exclude": ["**/node_modules", "**/.*/", "dist"]
}
