{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "es2020",
    "jsx": "react-jsx",
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@cd/data-access": ["../../../packages/data-access/src/index"],
      "@cd/eslint-config": ["../../../packages/eslint-config/src/index"],
      "@cd/eslint-config/*": ["../../../packages/eslint-config/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}
