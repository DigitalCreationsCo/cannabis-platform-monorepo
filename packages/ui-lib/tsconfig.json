{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react-jsx",
		"module": "esnext",
		"incremental": true,
		"noEmit": false,
		"strict": true,
		"paths": {
			"@cd/data-access": ["../../../packages/data-access/src/index"],
			"@cd/data-access/*": ["../../../packages/data-access/src/*"],
			"@cd/eslint-config": ["../../../packages/eslint-config/src/index"],
			"@cd/core-lib": ["../../../packages/core-lib/src/index"],
			"@cd/core-lib/*": ["../../../packages/core-lib/src/*"]
		}
	},
	"exclude": ["**/node_modules", "**/.*/", "dist", "build", 
		// "**/test/*"
	],
	"include": [
    	"**/*.eslintrc.*",
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	]
}
