{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"types": [
			"node",
			"jest",
			"vitest/globals"
		],
	  "strict": true,
	  "baseUrl": "./src",
	  "target": "es2015",
	  "lib": ["dom", "dom.iterable", "es2015"],
	  "module": "ESNext",
	  "moduleResolution": "bundler",
	  "jsx": "react-jsx",
	  "noEmit": false,
	  "incremental": true,
	  "paths": {
		"@gras/data-access": ["../../../packages/data-access/src/index"],
		"@gras/eslint-config": ["../../../packages/eslint-config/src/index"]
	},
	},
	"exclude": ["**/node_modules", "**/.*/*", "dist"],
	"include": [
		".src/types/core.d.ts",
		".eslintrc.*",
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	]
  }
  