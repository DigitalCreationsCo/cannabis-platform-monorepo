{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": "../",
		"paths": {
			"@gras/eslint-config": ["../../packages/eslint-config/"]
		},
		"types": ["jest", "node", "../../node_modules/@types/jest"],
		// "types": ["jest", "node", "../../node_modules/@types/jest"],
		"typeRoots": ["./globals.d.ts", "../../node_modules/@types"]
		// "typeRoots": ["./globals.d.ts", "../../node_modules/@types"]
	},
	"include": ["test", "**/*.spec.ts","**/*.test.ts","**/*.spec.tsx","**/*.test.tsx"],
	// "include": ["test", "**/*.spec.ts","**/*.test.ts","**/*.spec.tsx","**/*.test.tsx"]
	"exclude": ["**/node_modules", "dist", "build"]
}
