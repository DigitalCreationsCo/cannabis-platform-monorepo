{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2015",
		"lib": ["es2015"],
		"module": "es2020",
		"moduleResolution": "node",
		"paths": {
			"@cd/eslint-config": ["../../../packages/eslint-config/src/index"],
		}
	},
	"exclude": ["**/node_modules", "**/.*/",],
	"include": [
		"**/*.ts",
		"**/*.js",
	]
}
