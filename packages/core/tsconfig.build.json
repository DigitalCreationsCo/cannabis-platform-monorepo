{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
	  "target": "esnext",
	  "module": "esnext",
	  "jsx": "preserve",
	  "incremental": false,
	  "importHelpers": true,
	  "noEmitHelpers": true,
	  "removeComments": true
	},
	"exclude": [
	  "**/*.spec.*",
	  "**/*.test.*",
	  "**/*.stories.tsx",
	  "**/*.stories.ts",
	  "**/*.stories.mdx",
	  ".storybook/**"
	]
  }