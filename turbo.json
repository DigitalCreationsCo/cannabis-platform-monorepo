{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
      "dev": {
        "dependsOn": ["^dev"]
      },
      "build": {
        "dependsOn": ["test", "^build"],
        "outputs": [".next/**", "dist"]
      },
      "test": {
        "dependsOn": [],
        "outputs": [],
        "inputs": ["pages/**/*.{ts,tsx,js,jsx}","src/**/*.{ts,tsx}", "test/**/*.{ts,tsx}"]
      },
      "lint": {
        "outputs": []
      },
      "deploy": {
        "dependsOn": ["build", "test", "lint"],
        "outputs": []
      }
    }
  }