{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^lint",
          "^test",
          "^build"
        ],
        "outputs": [
          ".next/**",
          "dist"
        ]
      },

      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": [],
        "inputs": [
          "pages/**/*.{ts,tsx,js,jsx}",
          "src/**/*.{ts,tsx}",
          "test/**/*.{ts,tsx}"
        ]
      },

      "lint": {
        "outputs": []
      },

      "dev": {},

      "deploy": {
        "dependsOn": ["build", "test", "lint"],
        "outputs": []
      }
    }
  }