{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
      "install": {
        // A package's `install` script is not dependent. 
        // It also has no filesystem outputs.
        "dependsOn": [],
        "outputs": []
      },
      "build": {
        // A package's `build` script depends on that package's
        // dependencies and devDependencies
        // `build` , test, and install tasks  being completed first. Also
        // depends on lint task being completed for the package.
        // (the `^` symbol signifies `upstream`).
        "dependsOn": ["^test", "lint", "^build", "^install"],
        // note: output globs are relative to each package's `package.json`
        // (and not the monorepo root)
        "outputs": [".next/**", "dist"]
      },
      "test": {
        // A package's `test` script depends on that package's
        // own `build` script being completed first.
        "dependsOn": ["build"],
        "outputs": [],
        // A package's `test` script should only be rerun when
        // either a `.tsx` or `.ts` file has changed in `src` or `test` folders.
        "inputs": ["pages/**/*.{ts,tsx,js,jsx}","src/**/*.{ts,tsx}", "test/**/*.{ts,tsx}"]
      },
      "lint": {
        // A package's `lint` script has no dependencies and
        // can be run whenever. It also has no filesystem outputs.
        "outputs": []
      },
      "dev": {},
      "deploy": {
        // A package's `deploy` script depends on the `build`,
        // `test`, and `lint` scripts of the same package
        // being completed. It also has no filesystem outputs.
        "dependsOn": ["build", "test", "lint"],
        "outputs": []
      }
    }
  }