{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "test",
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "deploy": {
            "dependsOn": [
                "build",
                "test",
                "lint"
            ],
            "outputs": []
        },
        "dev": {
            "dependsOn": [
                "^build",
                "^dev"
            ]
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "dependsOn": [],
            "inputs": [
                "pages/**/*.{ts,tsx,js,jsx}",
                "src/**/*.{ts,tsx}",
                "test/**/*.{ts,tsx}"
            ],
            "outputs": []
        }
    }
}