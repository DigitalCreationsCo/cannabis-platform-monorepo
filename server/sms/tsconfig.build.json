{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "./dist",
		"target": "ES2015",
		"lib": ["ES2015"],
		"esModuleInterop": true,
		"paths": {
			"@gras/core": ["../../../packages/core/src/index"],
			"@gras/data-access": ["../../../packages/data-access/src/index"],
			"@gras/eslint-config": ["../../../packages/eslint-config/src/index"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	],
	"exclude": ["**/.*/"]
}
