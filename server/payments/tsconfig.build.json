{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"noEmit": false,
		"outDir": "./dist",
		"target": "ES2015",
		"lib": ["ES2015"],
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": ["./src"],
	"exclude": ["**/node_modules", "**/test", "**/.*/"]
}
