{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"strict": false,
		"target": "ES2015",
		"lib": ["ES2015"],
		"module": "es2020",
		"moduleResolution": "node",
		"jsx": "preserve",
		"paths": {
			"@gras/core": ["../../../packages/core/src/index"],
			"@gras/data-access": ["../../../packages/data-access/src/index"],
			"@gras/eslint-config": ["../../../packages/eslint-config/src/index"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.mts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.jsx",
		"**/*.json"
	],
	"exclude": ["**/node_modules", "**/.*/"]
}
