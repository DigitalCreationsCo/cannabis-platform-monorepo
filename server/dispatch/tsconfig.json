{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": false,
    "baseUrl": "./src",
    "strict": true,
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "module": "ES2020",
    "jsx": "preserve",
    "paths": {
      "@cd/ui-lib": ["../../../packages/ui-lib/src/index"],
      "@cd/core-lib": ["../../../packages/core-lib/src/index"],
      "@cd/data-access": ["../../../packages/data-access/src/index"],
      "@cd/eslint-config": ["../../../packages/eslint-config/src/index"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": ["**/node_modules", "**/.*/"]
}
