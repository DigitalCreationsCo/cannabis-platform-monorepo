{ 
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": false,
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "es2020"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "interfaces.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": ["**/node_modules", "**/test", "./src/api/models/**", "**/.*/"]
}