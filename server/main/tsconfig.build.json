{ 
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "es2020"
  },
  "include": [
    "interfaces.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": ["**/node_modules", "**/test", "./src/api/models/**", "**/.*/"]
}