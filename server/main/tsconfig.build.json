{ 
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "target": "ES2015",
    "lib": ["ES2015"],
    "esModuleInterop": true,
    "paths": {
      "@cd/core-lib": ["../../../packages/core-lib/src/index"],
      "@cd/data-access": ["../../../packages/data-access/src/index"],
      "@cd/eslint-config": ["../../../packages/eslint-config/src/index"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": ["**/.*/"]
}