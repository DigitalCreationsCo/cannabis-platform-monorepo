{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.base.json",
    "exclude": ["script", "dist", "webpack.config.cjs", "**/node_modules",  "**/.*/"],
    "compilerOptions": {
        "baseUrl": "./src",
        "lib": [ "dom", "dom.iterable", "esnext" ],
        "module": "esnext",
        "noEmit": false,
        "target": "esnext",
        "allowJs": true,
        "outDir": "./dist",
        "jsx": "react-jsx",
        "paths": {
            "@cd/ui-lib/*": ["../../../packages/ui-lib/src/*"],
            "@cd/ui-lib": ["../../../packages/ui-lib/src/index"],
            "@cd/core-lib/*": ["../../../packages/core-lib/src/*"],
            "@cd/core-lib": ["../../../packages/core-lib/src/index"],
            "@cd/data-access": ["../../../packages/data-access/src/index"],
            "@cd/data-access/*": [ "../../../packages/data-access/src/*"],
            "@cd/eslint-config": ["../../../packages/eslint-config/src/index"],
            "@cd/eslint-config/*": ["../../../packages/eslint-config/src/*"]
        }
    }
}