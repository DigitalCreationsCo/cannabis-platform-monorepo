{
  "extends": "../../packages/shared-config/tsconfig/next.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@cd/data-access": ["../../packages/data-access/src"],
      "@cd/data-access/*": ["../../packages/data-access/src/*"],
      "@cd/shared-ui": ["../../packages/shared-ui/src"],
      "@cd/shared-ui/*": ["../../packages/shared-ui/src/*"],
      "@cd/shared-lib": ["../../packages/shared-lib/src"],
      "@cd/shared-lib/*": ["../../packages/shared-lib/src/*"]
    }
  }
}
