{
  "compilerOptions": {
    // "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "paths": {
      "components": [
        "./src/components/"
      ],
      "hooks": [
        "./src/hooks/"
      ],
      "middleware": [
        "./src/middleware/"
      ],
      "utils": [
        "./src/utils/"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "interfaces.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
