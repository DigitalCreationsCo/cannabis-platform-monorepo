{
  "json.schemas": [
    {
      "url": "https://cdn.jsdelivr.net/npm/tsup/schema.json",
      "fileMatch": [
        "**/tsup.config.json"
      ]
    }
  ],
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true,
  },
  "files.exclude": {
     "**/.git": false
  },
  "cSpell.words": [
    "blurhash",
    "camelcase",
    "cardlist",
    "daisyui",
    "ecommerce",
    "Formik",
    "healthcheck",
    "nocheck",
    "pscale",
    "purgecss",
    "reduxjs",
    "signin",
    "supertokens",
    "tailwindcss",
    "topbar",
    "usehooks",
    "zipcode"
  ],
  "jest.autoRun": {
    "watch": false
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  }
}